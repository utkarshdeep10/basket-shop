<% include partials/header %>

<div class="container">
        <h1 class="display-4 text-center">Add a new item</h1>
        <hr width="400px;">
        <div class="row justify-content-center align-items-center">    
            <div class="col-md-6 col-lg-4">
                    <form action="/main" method="post">
                        <div class="form-group">
                                        <strong><label for="name">Name:</label></strong>
                                <input class="form-control" type="text" name="name" placeholder="Name" required>
                        </div>
                        <div class="form-group">
                                        <strong><label for="image">Image URL:</label></strong>
                                <input class="form-control" type="text" name="image" placeholder="Image URL" required>
                        </div>
                        <div class="form-group">
                                        <strong><label for="price">Price(in &#8377;):</label></strong>
                                <input class="form-control" type="number" name="price" placeholder="100.00" min="99.00" step="1.00" required>
                        </div>
                        <div class="form-group">
                            <button class="btn btn-danger btn-block">Add</button>
                        </div>
                    </form>
                    <a href="/main">Back</a>
                </div>
        </div>
</div>

<% include partials/footer %>